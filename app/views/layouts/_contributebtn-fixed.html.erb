<button type="button" class="button1"data-toggle="modal" data-target="#contributeModal">
  Contribute now!
</button>


<div class="modal fade" id="contributeModal" tabindex="-1" role="dialog" aria-labelledby="contributeModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="contributeModalLabel">Thank you for your contributing</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div>Type the amount of Rs. you donate</div><br>
        <button id="down-button">
          <i class="fas fa-minus-circle" aria-hidden="true"></i>
        </button>
        <button id="up-button">
          <i class="fas fa-plus-circle" aria-hidden="true"></i>
        </button>
        <div>
          <%= form_for(@issue, url: issue_index_path, remote: true, class: 'form-group inline') do |f| %>
            <%= f.number_field :price,class: 'form-control modal-price', id: 'price-field', min: '0' %>
            <br><br>
            <%= f.submit 'Confirm', class: 'button1' %>
          <% end %>
        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

<script>
$('#price-field').val(0);
$('#up-button').on('click', function() {
  var target = $('#price-field').val();
  var result = parseInt(target) + 100;
  $('#price-field').val(result);
});
$('#down-button').on('click', function() {
  var target = $('#price-field').val();
  var result = parseInt(target) - 100;
  $('#price-field').val(result);
});
</script>

<style type="text/css">
.donate-description {
  width: 100%;
}
.modal-price {
  width: 50%;
  margin: auto;
  font-size: 24px;
}
#up-button {
  float: right;
  margin-right: 10px;
  font-size: 35px;
  background: none;
  border: 0;
}
#down-button {
  float: left;
  margin-left: 10px;
  font-size: 35px;
  background: none;
  border: 0;
}
</style>